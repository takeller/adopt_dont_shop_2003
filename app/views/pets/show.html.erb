<%= image_tag(@pet.image, size: "150x125") %>
<h1><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h1>
<p><%= @pet.description %></p>
<p><%= @pet.approximate_age %></p>
<p><%= @pet.sex %></p>
<p><%= @pet.adoption_status %></p>

<%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %><br>
<%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
